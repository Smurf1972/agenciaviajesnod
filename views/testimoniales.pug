extends ./layout/index

block contenido
    main.container.mt-5 
        //h1(class="mt-5 text-center") #{pagina}
        h1.mt-5.text-center #{pagina}
            blockquote.text-center Experiencias de Nuestros Clientes
            include ./layout/bloque_testimoniales
            .row
                .col.md-12
                        h2.d-block.w-100.text-center Agrega un Testimonial
                        //p= JSON.stringify(errores)
                        if (errores)
                            each error in errores
                                .alert.col.alert-danger.text-center= error.mensaje    
                .row.justify-content-center.col
                    .col-md-8
                        form(action="/testimoniales" method="POST")
                            .form-group
                                label(for="nombre") Nombre 
                                input#nombre(type="text", placeholder="Tu Nombre", name="nombre", class="from-control", value= nombre)
                            .form-group
                                label(for="correo") Correo Electronico 
                                input#nombre(type="text", placeholder="Tu Nombre", name="correo", class="from-control" value= correo)
                            .form-group
                                label(for="mensaje") Mensaje 
                                textarea#nombre(type="text", placeholder="Tu Mensaje", name="mensaje", class="from-control" rows=3 value= mensaje)= mensaje
                            input.btn.btn-success.btn-block(type="submit")    